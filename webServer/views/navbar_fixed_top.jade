doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title DisciPlan
    // Bootstrap core CSS
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')


  body
    nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse
      .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/usage/view') DisciPlan
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            if current == '/' || current == '/usage/view'
                li.active
                    a(href='/usage/view') Usage
                        span.sr-only (current)
            else
                li
                    a(href='/usage/view') Usage
            if current == '/friends'
                li.active
                    a(href='/') Following
                        span.sr-only (current)
            else
                li
                    a(href='/friends') Following
            if current == '/user_settings'
                li.active
                    a(href='/') Settings
                        span.sr-only (current)
            else
                li
                    a(href='/user_settings') Settings
            
          if current == '/user_settings'
            form.navbar-form.navbar-right
                button.btn.btn-default.addCategory(type='button') New Category

            form.navbar-form.navbar-right
                button.btn.btn-default.nuclear(type='button') Nuke All
            
            form.navbar-form.navbar-right
                button.btn.btn-default.unnuclear(type='button') Unnuke All
            
    block content



    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/editing_settings.js')
    script(src="/js/notify.min.js")